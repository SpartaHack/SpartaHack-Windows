<Page
    x:Class="SpartaHack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TargetBackground" Color="#FF030316"/>
            <SolidColorBrush x:Key="TargetForeground" Color="#FF80FFDB"/>
            <FontFamily x:Key="TargetFont">/Assets/Moondance.otf#Moondance</FontFamily>
        
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="SplitViewStyles.xaml"/>
        </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='1' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="MySplitView.DisplayMode"
                            Value="CompactInline" />

                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='2' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>


                        <Setter Target="MySplitView.DisplayMode"
                            Value="Overlay" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource TargetForeground}">


            <Grid Background="{StaticResource TargetBackground}" Height="48" VerticalAlignment="Top" RequestedTheme="Dark">

                <Button x:ConnectionId='10' x:Name="HambButton"  RequestedTheme="Dark" Foreground="{StaticResource TargetForeground}" Background="DarkGray" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="48" Height="48"                           HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Foreground="{StaticResource TargetForeground}" FontFamily="{StaticResource TargetFont}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Value}" FontWeight="ExtraBold"/>






            </Grid>
        </Border>
        <SplitView x:ConnectionId='3' x:Name="MySplitView" Margin="0,48,0,0" DisplayMode="CompactOverlay" OpenPaneLength="200" CompactPaneLength="50" IsPaneOpen="False" PaneBackground="{StaticResource TargetBackground}" BorderBrush="{StaticResource TargetForeground}">

            <SplitView.Pane >
                <Border BorderThickness="0,0,1,0" BorderBrush="{StaticResource TargetForeground}">


                    <Grid>

                        <StackPanel>


                            <RadioButton x:ConnectionId='5' Tag="&#xE90A;" Content="Notifications"  Style="{StaticResource SplitViewNavButtonStyle}"                                 />
                            <RadioButton x:ConnectionId='6' Tag="&#xE8CF;" Content="Concierge"  Style="{StaticResource SplitViewNavButtonStyle}"                                 />
                            <RadioButton x:ConnectionId='7' Tag="&#xE909;" Content="Map"  Style="{StaticResource SplitViewNavButtonStyle}"                        />
                            <RadioButton x:ConnectionId='8' Tag="&#xE897;" Content="Mentor"  Style="{StaticResource SplitViewNavButtonStyle}"                                 />
                            <RadioButton x:ConnectionId='9' Tag="&#xE716;" Content="Sponsors / Awards"  Style="{StaticResource SplitViewNavButtonStyle}"                                 />


                        </StackPanel>

                        <RadioButton x:ConnectionId='4' VerticalAlignment="Bottom" Tag="&#xE77B;" Content="Login"  Style="{StaticResource SplitViewNavButtonStyle}"                         />


                    </Grid>
                </Border>
            </SplitView.Pane>

        </SplitView>
    </Grid>
</Page>

