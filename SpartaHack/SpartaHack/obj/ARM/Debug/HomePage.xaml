<Page
    x:Class="SpartaHack.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TargetBackground" Color="#FF030316"/>
            <SolidColorBrush x:Key="TargetForeground" Color="#FF80FFDB"/>
            <FontFamily x:Key="TargetFont">/Assets/Moondance.otf#Moondance</FontFamily>
            <CollectionViewSource x:ConnectionId='1' x:Name="Data"/>
        </ResourceDictionary>
        
    </Page.Resources>
    <Border BorderThickness="1,0,0,0" BorderBrush="{StaticResource TargetForeground}" Background="{StaticResource TargetBackground}">
        <Grid >
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/FacebookTwitterIGProfilePic.png"/>
            </Grid.Background>

            <!--<Image Source="/Assets/mlhBackground.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.95" />-->

               
                
          
            <ItemsControl x:ConnectionId='2' x:Name="listAnnouncements" ItemsSource="{Binding Source={StaticResource Data}}" HorizontalAlignment="Stretch" Margin="5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="2">
                            <StackPanel Background="#5D5D5D" Height="100" >
                                <TextBlock Margin="2" Text="{Binding Title}" FontSize="22" Typography.Capitals="AllSmallCaps" />
                            <TextBlock Margin="20,10,0,0" Text="{Binding Description}"/>
                        </StackPanel>
                            <Polygon Points="10,0 10,15, 25,0" Stroke="#5D5D5D" Fill="#5D5D5D" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Page>

