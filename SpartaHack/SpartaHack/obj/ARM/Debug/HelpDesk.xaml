<Page
    x:Class="SpartaHack.HelpDesk"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TargetBackground" Color="#FF030316"/>
            <SolidColorBrush x:Key="TargetForeground" Color="#FF80FFDB"/>
            <FontFamily x:Key="TargetFont">/Assets/Moondance.otf#Moondance</FontFamily>

            <DataTemplate x:ConnectionId='1' x:Name="ticketHeaderView">
                
                <StackPanel x:ConnectionId='4' Margin="10"                            MinWidth="400" >
                    <TextBlock FontSize="18" Text="{Binding Title}" Foreground="{StaticResource TargetForeground}"/>
                    <TextBlock FontSize="12" Text="{Binding Description}" Foreground="White" TextWrapping="WrapWholeWords"/>
                            <FlyoutBase.AttachedFlyout>
                                <Flyout Placement="Right">
                                    <StackPanel Width="300">
                                        <TextBlock Text="REPORT YOUR PROBLEM"/>
                                        <TextBlock Text="{Binding Title}"/>
                                        <TextBox PlaceholderText="Please descrive your problem"  Text="{Binding ProblemDescription, Mode=TwoWay}" Margin="5"/>
                                        <Button x:ConnectionId='5' x:Name="btnSubmit" Content="SUBMIT" Margin="5"                        />
                                    </StackPanel>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                </StackPanel>
                    
            </DataTemplate>
            
            
            
            <DataTemplate x:Key="ticketView">
                <StackPanel Margin="10" >
                    <!--<TextBlock FontSize="18" Text="{Binding Title}" Foreground="{StaticResource TargetForeground}"/>-->
                    <TextBlock FontSize="18" Text="{Binding Description}" Foreground="{StaticResource TargetForeground}" TextWrapping="WrapWholeWords"/>
                    <TextBlock FontSize="12" Margin="5" Text="{Binding Time}" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </DataTemplate>
            
            <CollectionViewSource x:ConnectionId='2' x:Name="Tickets"/>
            <CollectionViewSource x:ConnectionId='3' x:Name="Categories"/>
        </ResourceDictionary>
        
    </Page.Resources>
    <Grid  Background="{StaticResource TargetBackground}">
        <Grid Margin="5,5,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
                <TextBlock Grid.Row="0" FontSize="18" FontFamily="{StaticResource TargetFont}" Foreground="{StaticResource TargetForeground}" Text="NEED HELP? SELECT A TOPIC"/>
            <ListView x:ConnectionId='6' x:Name="lsvCategories" IsSynchronizedWithCurrentItem="False" SelectedIndex="-1" Margin="0,20,0,0" Grid.Row="0" Grid.RowSpan="1" ItemsSource="{Binding Source={StaticResource Categories}}" ItemTemplate="{StaticResource ticketHeaderView}" >

            </ListView>
           
            <TextBlock Text="YOUR CURRENT TICKETS" FontSize="18" Grid.Row="1" FontFamily="{StaticResource TargetFont}" Foreground="{StaticResource TargetForeground}"/>

            <ListView SelectedIndex="-1"  IsSynchronizedWithCurrentItem="False" Grid.Row="1" Margin="0,40,0,0" ItemsSource="{Binding Source={StaticResource Tickets}}" ItemTemplate="{StaticResource ticketView}" IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False"/>


        </Grid>
    </Grid>
</Page>

