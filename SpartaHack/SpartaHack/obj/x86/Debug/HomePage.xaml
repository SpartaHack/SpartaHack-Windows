<Page
    x:Class="SpartaHack.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TargetBackground" Color="#FF030316"/>
            <SolidColorBrush x:Key="TargetForeground" Color="#FF80FFDB"/>
            <FontFamily x:Key="TargetFont">/Assets/Moondance.otf#Moondance</FontFamily>
            <CollectionViewSource x:ConnectionId='1' x:Name="Data"/>
        </ResourceDictionary>
        
    </Page.Resources>
     <Grid Background="{StaticResource TargetBackground}" >
       

            <!--<Image Source="Assets/logo.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.95" />-->

               
               
          
            <ListView x:ConnectionId='2' IsSynchronizedWithCurrentItem="False"  x:Name="listAnnouncements" ItemsSource="{Binding Source={StaticResource Data}}" HorizontalAlignment="Stretch" Margin="10" MaxWidth="500">
                <ListView.ItemTemplate>
                    <DataTemplate>
                    <StackPanel  Margin="0,5" Width="380">
                        <Border BorderBrush="{StaticResource TargetForeground}" BorderThickness="1,1,1,0">
                    <StackPanel Margin="10">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="{Binding Title}" FontSize="22" Typography.Capitals="AllSmallCaps" />
                        <TextBlock Margin="20,30,0,0" HorizontalAlignment="Left" Text="{Binding Description}" TextWrapping="WrapWholeWords" />

                    </StackPanel>
                        </Border>
                        <Polyline Points="0,0 10,0 10,15, 25,0, 380,0" StrokeThickness="1" Stroke="{StaticResource TargetForeground}"/>

                    </StackPanel>
 
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

</Page>

