<Page
    x:Class="SpartaHack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TargetBackground" Color="#FF030316"/>
            <SolidColorBrush x:Key="TargetForeground" Color="#FF80FFDB"/>
        </ResourceDictionary>
    </Page.Resources>
    <SplitView x:ConnectionId='1' x:Name="MySplitView" DisplayMode="CompactInline" OpenPaneLength="200" CompactPaneLength="50" IsPaneOpen="False" PaneBackground="{StaticResource TargetBackground}" BorderBrush="{StaticResource TargetForeground}">

        <SplitView.Pane >
            <Border BorderThickness="0,0,1,0" BorderBrush="{StaticResource TargetForeground}">


                <Grid>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='2' x:Name="HamburgerButton" Foreground="{StaticResource TargetForeground}"  FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50"   HorizontalAlignment="Left" VerticalAlignment="Top"                              />

                            <TextBlock Foreground="{StaticResource TargetForeground}" Text="SpartaHack" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button  FontFamily="Segoe MDL2 Assets" Content="&#xE90A;" 
                        Width="50" Height="50" Background="Transparent" Foreground="{StaticResource TargetForeground}"/>

                            <TextBlock Text="Announcements" FontSize="18" VerticalAlignment="Center" Foreground="{StaticResource TargetForeground}" />
                        </StackPanel>

                    </StackPanel>


                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal"  >
                        <Button  FontFamily="Segoe MDL2 Assets" Content="&#xE77B;" 
                        Width="50" Height="50" Background="Transparent" RequestedTheme="Dark"/>
                        <TextBlock Text="Login" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </SplitView.Pane>
        <SplitView.Content >
            <Border BorderThickness="1,0,0,0" BorderBrush="{StaticResource TargetForeground}" Background="{StaticResource TargetBackground}">
                <StackPanel Margin="10">
                    <TextBlock FontSize="20" FontWeight="Bold"  Foreground="{StaticResource TargetForeground}" Text="NEWS"/>
                    <TextBlock Margin="0,20,0,0" Foreground="{StaticResource TargetForeground}">
                        Here is some news<LineBreak/>
                        Blah<LineBreak/>
                        Some more stuff
                    </TextBlock>
                </StackPanel>

                
            </Border>
        </SplitView.Content>
    </SplitView>
</Page>

