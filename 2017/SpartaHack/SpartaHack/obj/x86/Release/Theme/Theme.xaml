<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpartaHack.Theme">

    <FontFamily x:Key="LatoLight">/Theme/Fonts/Lato/Lato-Light.ttf#Lato Light</FontFamily>
    <FontFamily x:Key="LatoRegular">/Theme//Fonts/Lato/Lato-Regular.ttf#Lato Regular</FontFamily>
    <FontFamily x:Key="NemoyLight">/Theme/Fonts/nemoy/Nemoy_light-webfont.ttf#Nemoy</FontFamily>

    <SolidColorBrush x:Key="ThemeDark" Color="#362F26"/>
    <SolidColorBrush x:Key="ThemeDarkerGold" Color="#B58A2D"/>
    <SolidColorBrush x:Key="ThemeDarkGold" Color="#D4B166"/>
    <SolidColorBrush x:Key="ThemeLightGold" Color="#FAE2A4"/>
    <SolidColorBrush x:Key="ThemeLighterGold" Color="#FFF3D8"/>
    <SolidColorBrush x:Key="ThemeLight" Color="#FFFFFF"/>

    <LinearGradientBrush x:Key="ThemeDarkGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#FAE2A4" Offset="0.0" />
        <GradientStop Color="#B58A2D" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ThemeLightGradient" StartPoint="0.5,0" EndPoint="0.5,1">

      
        <GradientStop Color="#FFFFFF" Offset="0.87"/>
        <GradientStop Color="#FFF3D8"   Offset="1.0"/>


    </LinearGradientBrush>


</ResourceDictionary>

